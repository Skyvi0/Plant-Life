<div class="container">

<%= cl_image_tag @plant.photo.key, height: 300, width: 400, crop: :fill %>

  <h1 class="text-center"><%= @plant.common %></h1>
  <%= cl_image_tag @plant.photo.key, height: 300, width: 400, crop: :fill %>

  <%= simple_form_for [@garden, @my_plant] do |f| %>
    <%= f.input :nickname %>
    <%= f.input :last_watered %>
    <%= f.input :photo, as: :file, style: "width: 75%" %>
    <%= hidden_field_tag "plant_id", params[:plant_id] %>
    <%= f.button :submit, "Create Plant!", class: "btn btn-primary"%>
  <% end %>

</div>
